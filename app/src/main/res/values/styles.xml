<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScrollableTabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="tabContentStart">30dp</item>
        <item name="tabGravity">start</item>
        <item name="tabIndicator">@drawable/bg_tablayout_indicator</item>
        <item name="tabIndicatorColor">#FFE045</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingStart">13dp</item>
        <item name="tabPaddingEnd">13dp</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabSelectedTextSize">20sp</item>
        <item name="tabTextColor">@color/color_tab</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">15sp</item>
    </style>
</resources>